{
    "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "lib": ["dom", "es2017", "es2020", "es2021.String"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "paths": {
        "src/*": ["./src/*"],
        "assets/*": ["./assets/*"],
      },
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ESNext",
      "module": "ES2020",
      "types": ["vitest/globals", "vite/client"]
    },
    "include": ["src", "index.tsx"]
  }
